{
    "name": "poly-ex-hoisted",
    "description": "example poly repo for yarn workspace hoisted by symlink to poly-ex/package.hoist.json",
    "version": "1.0.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],

    "scripts": {
        "dev": "echo 'run this: $> ./poly-ex/dev.sh'",
    },
    "useWorkspaces": true,
    "devDependencies": {
        "@types/react": "^18.2.17",
        "@types/react-dom": "^18.2.7",
        "concurrently": "^8.2.0"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5",
        "ttab": "^0.8.0"
    }
}